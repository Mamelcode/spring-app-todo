<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="todo">
	<select id="findByOwner" resultType="todo" parameterType="String">
		SELECT * FROM TODOS WHERE OWNER = #{owner}
	</select>
	<select id="findById" resultType="todo" parameterType="String">
		SELECT * FROM TODOS WHERE ID = #{id}
	</select>
	<insert id="create">
		INSERT INTO TODOS VALUES(#{id}, #{owner}, #{description}, #{targetDate}, #{done, jdbcType=VARCHAR})
	</insert>
	<delete id="deleteById" parameterType="String">
		DELETE FROM TODOS WHERE ID = #{id}
	</delete>
	<update id="update" parameterType="todo">
		UPDATE TODOS SET DESCRIPTION=#{description}, TARGET_DATE=#{targetDate} 
		WHERE ID = #{id}
	</update>
	<update id="doneUpdate" parameterType="todo">
		UPDATE TODOS SET DONE=#{done, jdbcType=VARCHAR} WHERE Id = #{id}
	</update>
</mapper>